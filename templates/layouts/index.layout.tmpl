{{define "index"}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{{template "title"}}</title>

  <link rel="icon" href="" type="image/x-icon">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css"/>
  <link rel="stylesheet" href="/css/style.css"/>

</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="/img/logo-default-213x82.png" width="105" height="40" alt="" loading="lazy">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">События</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">История</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Контакты</a>
          </li>
        </ul>
        <div class="d-flex align-items-center">
          <li class="list-inline-item"><a class="btn btn-success btn-sm" href="#">Регистрация</a></li>
          <li class="list-inline-item"><a class="btn btn-outline-success btn-sm" href="#">Войти</a></li>
        </div>
      </div>
    </div>
  </nav>
  <!-- Swiper -->

  <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper-container mySwiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide" style="background-image: url(img/slider-1-slide-1-1920x670.jpg)">
        <div class="title" data-swiper-parallax="-300">Заголовок 1</div>
        <div class="subtitle" data-swiper-parallax="-200">Подзаголовок 1</div>
        <div class="text" data-swiper-parallax="-100">
          <p>
            Текст 1
          </p>
          <button type="button" class="btn btn-outline-light">Кнопка 1</button>
        </div>
      </div>
      <div class="swiper-slide" style="background-image: url(img/slider-1-slide-2-1920x670.jpg);">
        <div class="title" data-swiper-parallax="-300">Заголовок 2</div>
        <div class="subtitle" data-swiper-parallax="-200">Подзаголовок 2</div>
        <div class="text" data-swiper-parallax="-100">
          <p>
            Текст 2
          </p>
          <button type="button" class="btn btn-outline-light">Кнопка 2</button>
        </div>
      </div>
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>
  <!-- End Swiper -->
  <!-- Sports -->
  <div class="container">
    <div class="menu-item">
      <ul class="nav nav-tabs nav-fill">
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#all"><span><img src="/img/sport-icons/soccer-cup.svg" alt="Все"><br></span>Все (15)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#ice_hockey"><span><img src="/img/sport-icons/ice_hockey.svg" alt="Хоккей"><br></span>Хоккей (3)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#volleyball"><span><img src="/img/sport-icons/volleyball-ball.svg" alt="Волейбол"><br></span>Волейбол (2)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#table_tennis"><span><img src="/img/sport-icons/ping-pong.svg" alt="Настольный теннис"><br></span>Настольный теннис (1)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#field_hockey"><span><img src="/img/sport-icons/field-hockey.svg" alt="Хоккей на траве"><br></span>Хоккей на траве (6)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#basketball"><span><img src="/img/sport-icons/basketball-ball.svg" alt="Баскетбол"><br></span>Баскетбол (3)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" data-toggle="tab" href="#football"><span><img src="/img/sport-icons/football.svg" alt="Футбол"><br></span>Футбол (0)</a>
        </li>
      </ul>
    </div>
    <div class="tab-content">
      <div class="tab-pane fade" id="all">
        Все записи
      </div>
      <div class="tab-pane fade" id="ice_hockey">
        Хоккей
      </div>
      <div class="tab-pane fade" id="volleyball">
        Волейбол
      </div>
      <div class="tab-pane fade" id="table_tennis">
        Настольный теннис
      </div>
      <div class="tab-pane fade show active" id="field_hockey">
        <div class="page">
          <div class="head">
            <h2 class="heading-component-title">Хоккей на траве (3)</h2>
              <ul class="list-inline">
                <li class="list-inline-item">
                  <a class="btn btn-sm btn-outline-danger active" href="#">Live</a>
                </li>
                <li class="list-inline-item">
                  <a class="btn btn-sm btn-outline-danger" href="#">Календарь</a>
                </li>
                <li class="list-inline-item">
                  <a class="btn btn-sm btn-outline-danger" href="#">История</a>
                </li>
              </ul>
          </div>
          <div class="content">
            <table class="table">
              <thead class="thead-inverse">
                <tr>
                  <th colspan="3">
                    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                      Кубок России
                    </a>
                  </th>
                </tr>
              </thead>
              <tbody class="collapse show" id="collapseExample">
                <tr>
                  <td><img src="/img/sport-icons/field-hockey.svg" alt="Хоккей на траве"></td>
                  <td>АкБарс - Москва</td>
                  <td>3 - 0</td>
                </tr>
                <tr>
                  <td><img src="/img/sport-icons/field-hockey.svg" alt="Хоккей на траве"></td>
                  <td>Екатеринбург - Электросталь</td>
                  <td>1 - 2</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="basketball">
        Баскетбол
      </div>
      <div class="tab-pane fade" id="football">
        Футбол
      </div>
    </div>
  </div>
  <!-- End Sports -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script src="/js/main.js" type="text/javascript"></script>
</body>
</html>
{{end}}