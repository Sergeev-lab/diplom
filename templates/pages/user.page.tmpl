{{template "index" .}}

{{define "title"}}
Личный кабинет
{{end}}

{{define "main"}}
<div id="myData" class="container">
  <div style="margin-top: 25px;" class="row gy-5">
    <div class="col-6">
      <div class="p-3 border bg-light">
        <h5 class="text-center">Ваши данные</h5>
        <form action="/user/" method="post" enctype="multipart/form-data">
          <h1 style="text-align: center; margin-bottom: 20px;"><span><img class="img-thumbnail" style="margin-right: 10px;" width="100px" height="100px" src="/img/commands/dynamo-kzn.png"></span>Динамо Казань</h1>
          <h5>Логин: @Sergeev</h5>
          <h5>Вид спорта: Хоккей на траве</h5>
          <ul class="list-inline">
            <li class="list-inline-item">
              <h5>Имя:</h5>
            </li>
            <li class="list-inline-item">
              <h5 :hidden="click">${name}$</h5>
            </li>
            <li class="list-inline-item">
              <input :hidden="!click" v-model="name" type="text" name="newName" value="Динамо Казань">
            </li>
            <li class="list-inline-item">
              <button v-on:click="clickFunc" type="button" class="btn btn-outline-success">${btnText}$</button>
            </li>
          </ul>
          <div style="margin-top: 10px;" class="form-control">
            <input v-on:change="previewFiles" type="file" name="newFile" id="file" class="input-file" accept="image/jpeg,image/png">
            <label v-bind:class="file" for="file" class="btn btn-tertiary js-labelFile">
              <i class="icon fa fa-check"></i>
              <span class="js-fileName">Изменить логотип</span>
            </label>      
          </div>
          <button style="margin-top: 10px;" type="submit" class="btn btn-success btn-block">Сохранить изменения</button>
        </form>
      </div>
    </div>
    <div class="col-6">
      <div class="p-3 border bg-light">
        <h5 class="text-center">Ваши достижения</h5>
        <table class="table">
          <thead>
            <tr>
              <th>Мето</th>
              <th>Соревнование</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Кубок России</td>
            </tr>
            <tr>
              <td>1</td>
              <td>Кубок России</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{{end}}